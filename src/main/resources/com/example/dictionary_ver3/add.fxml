<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane onKeyTyped="#search" prefHeight="490" prefWidth="830" style="-fx-background-color: #DDDDDD;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.dictionary_ver3.Add">
    <children>
        <TextField fx:id="searchWord" layoutX="30.0" layoutY="80.0" onKeyTyped="#search" prefHeight="150.0"
                   prefWidth="310.0" promptText="Nhập từ mới, vd : Hello">
            <effect>
                <DropShadow/>
            </effect>
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </TextField>
        <Text layoutX="40.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Nhập từ TIẾNG ANH muốn thêm:">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Text>
        <Button fx:id="addButton" layoutX="135.0" layoutY="240.0" mnemonicParsing="false" onMouseClicked="#gridPaneAble"
                prefHeight="40.0" prefWidth="100.0" text="ADD">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
            <effect>
                <DropShadow/>
            </effect>
        </Button>
        <TextField fx:id="consoleLog" layoutX="30.0" layoutY="380.0" prefHeight="70.0" prefWidth="310.0"
                   promptText="Thông báo lỗi!">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </TextField>
        <Text layoutX="45.0" layoutY="370.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Console Log:">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Text>
        <Pane layoutY="200.0" prefHeight="50.0" prefWidth="5.0" style="-fx-background-color: #66FFFF;"/>
        <GridPane fx:id="gridAdd" layoutX="375.0" layoutY="130.0" prefHeight="280.0" prefWidth="430.0"
                  style="-fx-border-color: #FFFFFF;">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="183.0" minWidth="10.0" prefWidth="101.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="331.0" minWidth="10.0" prefWidth="327.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="62.0" minHeight="10.0" prefHeight="59.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="65.0" minHeight="10.0" prefHeight="54.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="114.0" minHeight="10.0" prefHeight="114.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="54.0" minHeight="10.0" prefHeight="37.0" vgrow="SOMETIMES"/>

            </rowConstraints>
            <children>
                <Text layoutX="15.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Pronounce:">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Text>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="P.O.S:" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Text>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Meaning:" GridPane.rowIndex="2">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Text>
                <TextArea fx:id="newMean" promptText="Nghĩa, vd : Xin chào" GridPane.columnIndex="1"
                          GridPane.rowIndex="2">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </TextArea>
                <TextField fx:id="newPron" prefHeight="80.0" prefWidth="253.0" promptText="Phát âm, vd: həˈlō"
                           GridPane.columnIndex="1">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </TextField>
                <TextField fx:id="newPOS" prefHeight="83.0" prefWidth="271.0" promptText="Từ loại, vd: Danh từ"
                           GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </TextField>
                <Button fx:id="doneButton" mnemonicParsing="false" onMouseClicked="#addNewWord" prefHeight="40.0"
                        prefWidth="100.0" text="Done!" GridPane.rowIndex="3">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Button>
            </children>
        </GridPane>
        <TextField fx:id="makeFormTemp" layoutX="329.0" layoutY="558.0"/>
    </children>
</Pane>
