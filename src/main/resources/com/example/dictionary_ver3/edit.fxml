<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane prefHeight="490" prefWidth="830.0" style="-fx-background-color: #DDDDDD;" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionary_ver3.Edit">
    <children>
        <TextField fx:id="editSearch" layoutX="30.0" layoutY="80.0" onKeyTyped="#search" prefHeight="150.0"
                   prefWidth="310.0" promptText="Nhập từ: vd hello">
            <effect>
                <DropShadow/>
            </effect>
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </TextField>
        <ListView fx:id="editList" layoutX="30.0" layoutY="230.0" onMouseClicked="#editMenu" prefHeight="220.0"
                  prefWidth="310.0">
            <effect>
                <DropShadow/>
            </effect>
        </ListView>
        <Text layoutX="40.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Nhập từ cần CHỈNH SỬA:">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Text>
        <Pane layoutY="250.0" prefHeight="50.0" prefWidth="5.0" style="-fx-background-color: #66FFFF;"/>
        <TextField fx:id="deleteLine" layoutX="241.0" layoutY="523.0"/>
        <GridPane fx:id="gridEdit" layoutX="375.0" layoutY="130.0" prefHeight="280.0" prefWidth="430.0"
                  style="-fx-border-color: #FFFFFF;">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="175.0" minWidth="10.0" prefWidth="99.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="330.0" minWidth="10.0" prefWidth="329.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="192.0" minHeight="10.0" prefHeight="192.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="75.0" minHeight="10.0" prefHeight="28.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Word:">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Text>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Information:" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Text>
                <TextField fx:id="editWord" prefHeight="55.0" prefWidth="260.0" GridPane.columnIndex="1">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextField>
                <TextArea fx:id="editInfo" prefHeight="165.0" prefWidth="329.0" GridPane.columnIndex="1"
                          GridPane.rowIndex="1">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextArea>
                <Button fx:id="doneButton" mnemonicParsing="false" onMouseClicked="#editDone" prefHeight="40.0"
                        prefWidth="100.0" text="Done!" GridPane.rowIndex="2">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#cancelEdit" prefHeight="40.0" prefWidth="100.0"
                        text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Button>
            </children>
        </GridPane>
    </children>
</Pane>
